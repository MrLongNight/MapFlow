[package]
name = "egui_node_editor"
description = "A helper library to create interactive node graphs using egui"
homepage = "https://gitlab.com/cyloncore/egui_node_editor"
repository = "https://gitlab.com/cyloncore/egui_node_editor"
license = "MIT"
version = "0.9.0"
keywords = ["ui", "egui", "graph", "node"]
authors = ["setzer22", "cyrilleberger"]
edition.workspace = true
readme = "../README.md"
workspace = ".."

[features]
persistence = ["serde", "slotmap/serde", "smallvec/serde", "egui/persistence"]

[dependencies]
egui = { version = "0.33" }
slotmap = { version = "1.0" }
smallvec = { version = "1" }
serde = { version = "1", optional = true, features = ["derive"] }
thiserror = "2"
